{
  "server": {
    "port": 5000,
    "serverRestartDelay": 1000,
    "maxRetryAttempts": 3
  },

  "database": {
    "uri": "mongodb://localhost:27017/todo_list",
    "options": {
      "serverSelectionTimeoutMS": 5000
    }
  },

  "logger": {
    "level": "debug"
  },

  "httpLogger": {
    "format": ":method :url :status - :response-time ms",
    "level": "http"
  }
}
